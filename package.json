    "moment": "2.22.2",
    "moment-timezone": "0.5.23",
    "prettier": "1.15.2",
    "eslint": "5.9.0",
    "eslint-plugin-vue": "4.7.1",
    "eslint-plugin-prettier":"3.0.0",
    "eslint-config-prettier":"3.3.0"
  },
  "dependencies": {
  },
  "prettier": {
    "useTabs": true,
    "trailingComma": "all",
    "singleQuote": true
