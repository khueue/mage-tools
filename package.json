{
  "name": "mage-tools",
  "version": "0.0.1",
  "description": "Tools for WoD: Mage",
  "keywords": [],
  "private": true,
  "license": "",
  "scripts": {
    "dev": "bash ./scripts/app-dev.sh",
    "lint": "bash ./scripts/app-lint.sh",
    "pretty": "bash ./scripts/app-pretty.sh",
    "build": "bash ./scripts/app-build.sh",
    "watch-compile": "bash ./scripts/app-watch-compile.sh",
